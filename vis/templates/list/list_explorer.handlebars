<div class="">
    <div class="col-xs-12" id="explorer_header">
        <div id="show_hide_button" class="row">
            {{#unless modern_frontend_enabled}}
            <div class="col-xs-2" >▼</div>
            <div class="col-xs-8" id="show_hide_button_label">
                <span id="show_hide_label"></span>
            </div>
            <div class="col-xs-2 text-right">▼</div>
            {{/unless}}
        </div>

        <div id="explorer_options" class="row">
            <div class="" id="filter_container">
                <div class="input-group input-group-sm">
                    <i class="fa fa-search searchfield-icon"></i>
                    <input id="filter_input" type="text" class="form-control">
                    <span id="searchclear" class="glyphicon glyphicon-remove-circle"></span>
                </div>
            </div>
            
            
            {{#if filter_dropdown}}
            <div class="dropdown" id="filter_parameter_container">
                <button class="btn btn-primary dropdown-toggle" id="filter_params" type="button" data-toggle="dropdown">{{filter_by_label}}
                    <span id="curr-filter-type"></span>
                    <span class="caret"></span>
                </button>
                <ul id="filter-menu-entries" class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="filter-menu">
                </ul>
            </div>
            {{/if}}

            <div class="dropdown" id="sort_container">
                {{#if dropdown}}
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" id="sort" type="button" data-toggle="dropdown">
                        {{sort_by_label}}
                        <span id="curr-sort-type"></span>
                        <span class="caret"></span>
                    </button>
                    <ul id="sort-menu-entries" class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="sort-menu">
                    </ul>
                    {{else}}
                    <span id="sortby">{{sort_by_label}}</span>
                    <div id="sort-buttons" class="btn-group btn-group-sm pull-right" data-toggle="buttons" role="group"></div>
                    {{/if}}
                </div>
            </div>
        
        </div>
        <div class="col-xs-12" id="papers_list"></div>
